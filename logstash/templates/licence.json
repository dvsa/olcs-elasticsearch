{
  "template": "licence*",
  "mappings": {
    "licence": {
      "properties": {
        "org_type_desc_whole": {
          "type": "text"
        },
        "licence_trading_names": {
          "type": "text",
          "analyzer": "companies"
        },
        "fabs_reference": {
          "type": "text"
        },
        "company_or_llp_no": {
          "type": "text"
        },
        "org_type_desc": {
          "type": "keyword"
        },
        "no_of_licences_held": {
          "type": "text"
        },
        "ref_data_id": {
          "type": "text"
        },
        "licence_traffic_area": {
          "type": "keyword"
        },
        "org_name_wildcard": {
          "type": "text"
        },
        "lead_tc": {
          "type": "text"
        },
        "null": {
          "type": "text"
        },
        "case_count": {
          "type": "text"
        },
        "lic_id": {
          "type": "text"
        },
        "org_id": {
          "type": "text"
        },
        "is_mlh": {
          "type": "text"
        },
        "lic_no": {
          "type": "text"
        },
        "lic_status_desc_whole": {
          "type": "text"
        },
        "org_name": {
          "type": "text",
          "analyzer": "companies"
        },
        "ta_id": {
          "type": "text"
        },
        "lic_type_desc": {
          "type": "keyword"
        },
        "lic_type_desc_whole": {
          "type": "keyword"
        },
        "lic_status_desc": {
          "type": "keyword"
        },
        "lic_status": {
          "type": "keyword"
        },
        "goods_or_psv_desc": {
          "type": "keyword"
        }
      }
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "auto_expand_replicas": ${search_expand_replicas},
    "refresh_interval": "30s",
    "analysis": {
      "char_filter": {
        "spaces_removed_pattern": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      },
      "analyzer": {
        "companies": {
          "type": "standard",
          "stopwords": [
            "a",
            "an",
            "and",
            "&",
            "are",
            "as",
            "at",
            "be",
            "but",
            "by",
            "for",
            "if",
            "in",
            "into",
            "is",
            "it",
            "no",
            "not",
            "of",
            "on",
            "or",
            "such",
            "that",
            "the",
            "their",
            "then",
            "there",
            "these",
            "they",
            "this",
            "to",
            "was",
            "will",
            "with",
            "limited",
            "ltd",
            "plc",
            "inc",
            "incorporated",
            "llp"
          ]
        }
      }
    }
  }
}
